<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#c6c0ff">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply Filters"
        android:textSize="18dp"
        android:id="@+id/textView" android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:text="Ranking"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/Ranking_text1"
        android:hint="Lower"
        android:textColor="#000000"
        android:textSize="15dp"
        android:inputType="number"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/Ranking_text2"
        android:hint="Upper"
        android:textColor="#000000"
        android:textSize="15dp"
        android:inputType="number"
        android:layout_alignTop="@+id/Ranking_text1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:text="Tuition Fees ($)"
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:id="@+id/tuition1"
        android:hint="Lower"
        android:textSize="15dp"
        android:inputType="number"
        android:layout_alignTop="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:id="@+id/tuition2"
        android:hint="Upper"
        android:textSize="15dp"
        android:inputType="number"
        android:layout_alignTop="@+id/tuition1"
        android:layout_alignLeft="@+id/Ranking_text2"
        android:layout_alignStart="@+id/Ranking_text2" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:text="State"
        android:textColor="#000000"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:textSize="18dp"/>

    <Spinner
        android:id="@+id/state_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:entries="@array/states_list"
        android:layout_below="@+id/textView3"
        android:layout_toLeftOf="@+id/tuition2"
        android:layout_alignLeft="@+id/tuition1"
        android:layout_alignStart="@+id/tuition1" />


    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Search"
        android:id="@+id/search"
        android:textSize="13dp"
        android:layout_alignTop="@+id/bktohome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Back"
        android:id="@+id/bktohome"
        android:textSize="13dp"
        android:layout_marginBottom="102dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/search"
        android:layout_toEndOf="@+id/search" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:textColor="#000000"
        android:id="@+id/search_error"
        android:layout_below="@+id/search"
        android:layout_alignParentRight="true"/>

</RelativeLayout>